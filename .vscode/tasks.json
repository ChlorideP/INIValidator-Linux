{
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/C",
          "\"${workspaceFolder}/.vscode/env.bat\"",
          "&&"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "Debug",
      "type": "shell",
      "command": "msbuild",
      "args": [
        "INIValidator.sln",
        "/property:Configuration=Debug",
        "/property:GenerateFullPaths=true",
        "/t:build",
        "/consoleloggerparameters:NoSummary",
        "/v:m"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Release",
      "type": "shell",
      "command": "msbuild",
      "args": [
        "INIValidator.sln",
        "/property:Configuration=Release",
        "/property:GenerateFullPaths=true",
        "/t:build",
        "/consoleloggerparameters:NoSummary",
        "/v:m"
      ],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${workspaceFolder}/**/*.cpp",
        "-iquote${workspaceFolder}/src",
        "-I/usr/include/python3.13",
        "-o",
        "build/ini-validator",
        "-std=c++23",
        "-v"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc",
      ],
      "group": "build",
      "detail": "compiler: /usr/bin/clang++"
    }
  ]
}